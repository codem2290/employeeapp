        "auth": "xsuaa"
      },
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "Akash@tester.sap.com": {
              "password": "12345",
              "roles": [
                "employeeUser"
              ]
            }
          }
        }
      },
      "db": "hana"
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/employee_detail_app"
  ]
}
